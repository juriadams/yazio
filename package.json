{
  "name": "yazio",
  "version": "0.4.0",
  "description": "Lightweight JS/TS client for the YAZIO API. Track calories, log items, and build integrations easily.",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "bun --watch test",
    "bundle": "tsup src/index.ts src/auth.ts --minify --dts --format cjs,esm"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./auth": {
      "import": "./dist/auth.js",
      "require": "./dist/auth.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "tsup": "^8.0.2",
    "zod": "^3.22.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
